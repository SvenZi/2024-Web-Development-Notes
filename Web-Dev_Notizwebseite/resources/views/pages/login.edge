<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> AdonisJS - A fully featured web framework for Node.js </title>
  @vite(['resources/css/app.css', 'resources/css/login.css', 'resources/js/app.js'])
</head>

<body>
    <header>
        <a href="/"><img src="https://upload.wikimedia.org/wikipedia/commons/a/aa/Notizzettel.JPG"></a>
        
    </header>
    
    <section>  

        <div id="wrapper">
            <h1>Melde dich mit nur einem Klick an!</h1>
            <form id="loginForm" action="/login" method="POST">
                {{ csrfField() }}
                <input class="name" type="text" name="name" placeholder="Nutzername" required="required">
                <input class="pw" type="password" name="password" placeholder="Passwort" required="required">
                      
                <input class="submit" type="submit" value="Anmelden">
                <input class="submit" type="button" value="Registrieren" onclick="submitToRegister()">
            </form>
            
            <script>
                function submitToRegister() {
                    var form = document.getElementById("loginForm");
                    form.action = "/register"; // Ändere action auf /register
                    form.submit(); // Sende das Formular ab
                }
            </script>
            
        
        </div>
    </section>
    <footer>
